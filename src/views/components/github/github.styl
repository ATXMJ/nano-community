.github__container
  max-width 300px
  margin 16px auto 32px

.github__title
  font-family 'IBM Plex Mono', monospace
  letter-spacing 0.2em
  text-transform uppercase
  font-size 12px
  font-weight 800
  padding 16px 0

.github__events
  background white
  border-radius 4px
  box-shadow 0px 2px 1px -1px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0, 0, 0, 0.14), 0px 1px 3px 0px rgba(0, 0, 0, 0.12)

.github__event
  padding 8px 14px
  font-size 11px
  display flex
  a
    color $nanoSoftBlue
    &:hover
      text-decoration underline
      text-decoration-color $nanoSoftBlue
      text-decoration-thickness 2px
      text-underline-offset 2px
  &:not(:last-child)
    border-bottom 1px solid $borderColor

.github__event-time
  margin-left 4px
  padding-left 4px
  border-left 1px solid $borderColor
  color rgba(0,0,0,0.4)
  width 20px

.github__event-action
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  flex 1

.github__event-author
  margin-right 5px

.github__event-action
  color rgba(0,0,0,0.5)
