$hoverBackground = rgba(255, 255, 255, 0.8)
$hoverBorder = rgba(0, 0, 0, 0.23)

.menu__container
  margin-bottom 32px
  flex 1

.menu__sections
  display flex
  flex-wrap wrap
  align-content flex-start
  font-family 'Inter', sans-serif

.menu__section
  padding 16px
  border-radius 4px
  border 1px solid lighten($borderColor, 30%)
  flex 1
  margin 8px
  transition background-color 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,border 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  &:hover
    border-color $hoverBorder
    background $hoverBackground
    box-shadow $hoverShadow 4px 4px 0px 0px

.menu__links
  margin-top 8px
  a
    display block
    padding 3px 0
    font-weight 400
    font-size 12px
    line-height 16px
    &:hover
      color $nanoSoftBlue

.menu__heading
  font-weight 600
  text-transform capitalize
  font-family 'IBM Plex Mono', monospace

.menu__logo
  margin 8px
  width 100%
  border 1px solid transparent
  border-radius 3px
  transition background-color 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,border 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  display flex
  justify-content center
  align-items center

  &:hover
    background-color $hoverBackground
    border-color $hoverBorder
    box-shadow $hoverShadow 4px 4px 0px 0px

  img
    max-width 200px

@media (max-width 749px)
  .menu__container.desktop
    display none

  .menu__container.mobile .menu__logo
    display none

@media (min-width 750px)
  .menu__container.mobile
    display none
