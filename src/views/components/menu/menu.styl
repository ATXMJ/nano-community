.menu__container
  margin-bottom 32px
  flex 1

.menu__sections
  display flex
  flex-wrap wrap
  align-content flex-start

.menu__section
  padding 16px
  border-radius 4px
  border 1px solid $borderColor
  flex 1
  margin 8px
  transition background-color 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,border 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  &:hover
    border-color rgba(0, 0, 0, 0.23)
    background rgba(0, 0, 0, 0.04)
    box-shadow #F0F0F0 4px 4px 0px 0px

.menu__links
  margin-top 8px
  a
    display block
    padding 3px 0
    &:hover
      color $nanoSoftBlue

.menu__heading
  font-weight 600
  text-transform capitalize

.menu__logo
  margin 8px
  width 100%
  border 1px solid transparent
  border-radius 3px
  transition background-color 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,border 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  display flex
  justify-content center
  align-items center

  &:hover
    background-color rgba(0,0,0,0.04)
    border-color rgba(0,0,0,0.23)
    box-shadow #f0f0f0 4px 4px 0px 0px

  img
    max-width 200px

@media (max-width 749px)
  .menu__container.desktop
    display none

  .menu__container.mobile .menu__logo
    display none

@media (min-width 750px)
  .menu__container.mobile
    display none
