.post
  margin-bottom 16px

.post__title
  font-family 'Inter', sans-serif
  font-weight 400
  font-size 11pt
  line-height 1.45
  letter-spacing .005rem
  display block
  padding 0px 16px
  word-wrap break-word
  border 1px solid $borderColor
  border-radius 3px
  background #fafafa
  padding 14px

  &:hover
    text-decoration underline
    text-decoration-color $nanoSoftBlue
    text-decoration-thickness .1em
    text-underline-offset 1px

  &.discord
    font-size 10pt
    white-space pre-line
    word-break break-word

.post__meta
  font-family 'Roboto Mono', monospace
  color $nanoBlueGrey
  font-size 7pt
  margin-top 4px
  display flex
  flex-direction row
  padding 0 16px
  align-items center

  div + div
    margin-left 5px

.post__source
  border-radius 3px
  color white

  &.reddit
    color #FF5700

  &.forum
    color $nanoSoftBlue

  &.discord
    color #5865F2
