.post
  background #ffffff
  cursor pointer
  border-bottom 1px solid lighten($borderColor, 50%)

  &:hover
    .post__title
      color $nanoSoftBlue

.post__title
  font-family 'Inter', sans-serif
  font-weight 400
  font-size 10pt
  line-height 1.45
  letter-spacing .005rem
  display flex
  word-wrap break-word
  padding 14px 14px 0
  align-items center

  &.discord
    white-space pre-line
    word-break break-word

.post__meta
  font-family 'Roboto Mono', monospace
  color $nanoBlueGrey
  font-size 10px
  padding 8px 16px 16px
  display flex
  flex-direction row
  align-items center

  div + div
    margin-left 5px

.post__source
  border-radius 3px
  color white

  &.reddit
    color #FF5700

  &.forum
    color $nanoSoftBlue

  &.discord
    color #5865F2

.post__emoji
  display inline-block
  padding 0 3px

  img
    object-fit contain
    width 1.375em
    height 1.375em
    vertical-align bottom
