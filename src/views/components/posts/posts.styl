.posts__header
  display flex
  align-items center
  background white
  padding 0 16px 0 0
  margin 0 8px
  border-radius 6px 6px 0 0

.posts__body
  background white
  border-radius 4px
  overflow hidden
  margin 0 8px 32px
  min-height 48px
  position relative

  &:empty:before
    font-family 'IBM Plex Mono', monospace
    letter-spacing 0.5em
    text-transform uppercase
    color rgba(0,0,0,0.3)
    content: 'none'
    margin 0 auto
    top 36px
    left 50%
    transform translate(-50%, -25px)
    position absolute

.posts__heading
  flex 1
  font-family 'IBM Plex Mono', monospace
  letter-spacing 0.1em
  text-transform capitalize
  position relative
  font-weight 600
  font-size 8pt
  line-height 1rem
  margin 15px 0
  span
  a
    display inline-block
    position relative
    background white
    padding 3px 8px 2px 12px

.posts__age
  flex 0 0 auto
  border-radius 4px
  border 1px solid $borderColor
  background #ffffff

  .MuiToggleButton-root
    border none
    margin 4px
    font-size 10px
    padding 3px 8px
    &:not(:first-child)
    &:first-child
      border-radius 4px
