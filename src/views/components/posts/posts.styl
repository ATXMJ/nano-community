.posts__container
  margin-bottom 16px

.posts__body
  background white
  border-radius 4px
  overflow hidden
  margin 0 8px 32px
  min-height 48px
  position relative

  &:empty:before
    font-family 'IBM Plex Mono', monospace
    letter-spacing 0.5em
    text-transform uppercase
    color rgba(0,0,0,0.3)
    content: 'none'
    margin 0 auto
    top 36px
    left 50%
    transform translate(-50%, -25px)
    position absolute

.posts__age
  flex 0 0 auto
  border-radius 4px
  border 1px solid $borderColor
  background #ffffff

  .MuiToggleButton-root
    border none
    margin 4px
    font-size 10px
    padding 3px 8px
    &:not(:first-child)
    &:first-child
      border-radius 4px

@media (min-width 750px)
  .posts__container
    border-radius 16px
    padding 0 16px
    background lighten($backgroundColor, 30%)
    border 1px solid lighten($borderColor, 50%)

  .posts__body
    box-shadow 0px 3px 1px -2px rgba(0, 0, 0, 20%), 0px 2px 2px 0px rgba(0, 0, 0, 14%), 0px 1px 5px 0px rgba(0, 0, 0, 12%)

@media (max-width 749px)
  .posts__container
    border-left none
    border-right none
