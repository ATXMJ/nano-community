.representatives__alerts
  margin 32px 0
  border-radius 4px
  box-shadow 0px 2px 1px -1px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0, 0, 0, 0.14), 0px 1px 3px 0px rgba(0, 0, 0, 0.12)
  .MuiTableRow-root
    background white
    &.low.uptime
    &.behind
      background #FEF8EA

    &.offline
      background lighten(#bf4f4f, 95%)

.representatives__alerts-expand
  cursor pointer
  &:hover .MuiTableCell-root
    color $nanoSoftBlue
    text-decoration underline
    text-decoration-color $nanoSoftBlue
    text-decoration-thickness 2px
    text-underline-offset 2px

.rep__alert
  .MuiChip-label
    text-transform uppercase
    font-size 10px

  &.overweight
    background #E5F0F9
    border-color transparent

  &.low.uptime
  &.behind
    background darken(#FEF8EA, 10%)
    border-color transparent

  &.offline
    border-color #bf4f4f
    color #bf4f4f
