.representatives__alerts
  border-radius 4px
  border 1px solid $borderColor

  .MuiTableRow-root
    background white
    &.behind
      background #FEF8EA

    &.offline
      background lighten(#bf4f4f, 95%)

.representatives__alerts-expand
  cursor pointer
  &:hover .MuiTableCell-root
    color $nanoSoftBlue
    text-decoration underline
    text-decoration-color $nanoSoftBlue
    text-decoration-thickness 2px
    text-underline-offset 2px

.rep__alert
  .MuiChip-label
    text-transform uppercase
    font-size 10px

  &.overweight
    background #E5F0F9
    border-color transparent

  &.behind
    background darken(#FEF8EA, 10%)
    border-color transparent

  &.offline
    border-color #bf4f4f
    color #bf4f4f
