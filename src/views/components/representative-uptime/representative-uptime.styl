.representative__uptime.representative__section
  font-family 'IBM Plex Mono', monospace
  flex 2 1 350px
  letter-spacing 0.02857em
  line-height 1.75
  font-size 14px

.representative__uptime-bar
  display flex
  border-bottom 1px solid $borderColor
  padding 16px 8px 8px
  .uptime
    margin 0 auto

.representative__uptime-metrics
  display flex
  justify-content space-around
  flex-wrap wrap

.representative__uptime-metrics-metric
  padding 16px
  flex 0 0 auto

.representative__uptime-metric-header
  font-size 12px
  font-weight 800
  color rgba(0,0,0,0.8)

.representative__uptime-metric-body
  font-size 22px
  &.online
    color #3bd671
  &.offline
    color #ee6666
  &.warning
    color #ffac33
