.home__container
  display flex
  margin 0 auto
  flex-wrap wrap
  max-width 1300px

.home__body
  flex 1 1 550px
  padding 0 16px
  overflow hidden
  max-width 800px
  margin 16px 0
  background white

.home__side
  flex 1
  min-width 200px
  max-width 350px
  margin 32px auto

.home__sections
  display flex
  flex-wrap wrap
  align-items flex-start
  margin-bottom 32px

@media (min-width 750px)
  .home__body
    border-radius 16px
    margin 16px
