.representative__body
  width 100%
  display flex
  flex-wrap wrap
  padding-top 32px
  max-width 800px
  margin 0 auto

.representative__alias
  flex 1 1 100%
  font-family 'IBM Plex Mono', monospace
  padding 0 8px

.representative__footer
  width 100%
  max-width 1300px
  margin 0 auto

.representative__metrics
  flex 1
  display flex
  border 1px solid $borderColor
  border-radius 3px
  margin 8px

.representative__metrics-menu
  background white
  border-right 1px solid $borderColor

.representative__metric
  flex 1
